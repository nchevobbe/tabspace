{
  "parser": "babel-eslint",
  "plugins": ["react", "flowtype", "babel", "jest", "jsx"],
  "extends": ["prettier", "plugin:flowtype/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "rules": {
    "no-unused-vars": 2,
    "no-undef": 2,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "spread": true,
      "restParams": true
    }
  }
}
